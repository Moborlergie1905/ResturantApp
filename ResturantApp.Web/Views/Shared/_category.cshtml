@model IEnumerable<ResturantApp.BOL.Category>
<div class="row">
    <div class="col-xl-6 col-sm-6 mb-6 bg-light">
        <form>            
            <div class="form-group row">
                <label for="cat" class="col-xl-3 col-sm-3 mb-3">Category</label>
                <div class="col-xl-9 col-sm-9 mb-9">
                    <input type="text" id="txtCat" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-3 col-xl-9 col-sm-9 mb-9">
                    <button type="button" id="btnSave" class="btn btn-dark">ADD</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-xl-6 col-sm-6 mb-6">
        <table class="table table-striped table-responsive-sm">
            <thead>
                <tr>
                    <th>S/No</th>
                    <th>Category</th>
                    <th></th>
                </tr>               
            </thead>
            <tbody id="tbl">
              @foreach(var cat in Model)
              {
                  <tr>
                      <td></td>
                      <td>@cat.Name</td>
                      <td></td>
                  </tr>
              }
            </tbody>
        </table>
    </div>
</div>


