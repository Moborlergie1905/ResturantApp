@model IEnumerable<ResturantApp.BOL.Category>

@{
    ViewBag.Title = "ViewCategories";
    Layout = null;
}
<p>
    <a class="btn btn-primary btn-lg text-white" onclick="refreshAddNew('@Url.Action("Create","Category", new { id=0})', document.getElementById('addCategory'), document.getElementById('categoryCarousel'), 1)"><i class="fa fa-plus fa-lg"></i></a>
</p>
<table class="table table-striped table-dark table-hover">
    <thead>
        <tr>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tbl">
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    <a class="btn btn-success btn-sm text-white" onclick="Edit('@Url.Action("Create","Category", new { id=@item.CatID})', document.getElementById('addCategory'), document.getElementById('categoryCarousel'))"><i class="fa fa-pencil fa-lg"></i></a>
                    <a class="btn btn-danger btn-sm text-white" onclick="Delete('@Url.Action("Delete","Category", new { id=@item.CatID})', document.getElementById('viewCategory'))"><i class="fa fa-trash fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

