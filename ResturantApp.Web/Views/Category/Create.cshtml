@model ResturantApp.BOL.Category

@{
    ViewBag.Title = "Create";
    Layout = null;
}

@using (Html.BeginForm("Create","Category",FormMethod.Post, new { enctype = "multipart/form-data", onSubmit= "return jQueryAjaxPost(this, document.getElementById('viewCategory'), document.getElementById('addCategory'), document.getElementById('categoryCarousel'));", data_resetUrl = Url.Action("Create", "Category", new { id = 0 }) }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CatID)
    <div>    
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-xl-3 col-sm-3 mb-3" })
            <div class="col-xl-9 col-sm-9 mb-9">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-3 col-xl-9 col-sm-9 mb-9">
                <input type="submit" value="Add" class="btn btn-dark" />
                <a class="btn btn-info text-white" onclick="refreshAddNew('@Url.Action("Create","Category", new { id=0})', document.getElementById('addCategory'), document.getElementById('categoryCarousel'), 0)">Return</a>
            </div>
        </div>
    </div>
}

