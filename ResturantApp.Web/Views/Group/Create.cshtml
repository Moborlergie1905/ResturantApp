@model ResturantApp.BOL.Group

@{
    ViewBag.Title = "Create";
    Layout = null;
}

@using (Html.BeginForm("Create", "Group", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPost(this, document.getElementById('viewGroup'), document.getElementById('addGroup'), document.getElementById('groupCarousel'));", data_resetUrl = Url.Action("Create", "Group", new { id = 0 }) }))
{
    @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.GpID)

        <div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-xl-3 col-sm-3 mb-3" })
                <div class="col-xl-8 col-sm-8 mb-8">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.divID, "Division", htmlAttributes: new { @class = "control-label col-xl-3 col-sm-3 mb-3" })
                <div class="col-xl-8 col-sm-8 mb-8">
                    @Html.DropDownListFor(model => model.divID, (IEnumerable<SelectListItem>)ViewBag.DivisionID,
                "Select", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.divID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-3 col-xl-8 col-sm-8 mb-8">
                    <input type="submit" value="Add" class="btn btn-dark" />
                    <a class="btn btn-info text-white" onclick="refreshAddNew('@Url.Action("Create","Group", new { id=0})', document.getElementById('addGroup'), document.getElementById('groupCarousel'), 0)">Return</a>
                </div>
            </div>
        </div>
    </div>
}
