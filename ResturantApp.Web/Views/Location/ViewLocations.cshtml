@model IEnumerable<ResturantApp.BOL.Location>

@{
    ViewBag.Title = "ViewLocations";
    Layout = null;
}

<p>
    <a class="btn btn-primary btn-lg text-white" onclick="refreshAddNew('@Url.Action("Create","Location", new { id=0})', document.getElementById('addLocation'), document.getElementById('locationCarousel'), 1)"><i class="fa fa-plus fa-lg"></i></a>
</p>
<table class="table table-striped table-dark table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Branch)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Branch)
        </td>
        <td>
            <a class="btn btn-success btn-sm text-white" onclick="Edit('@Url.Action("Create","Location", new { id=@item.LocID})', document.getElementById('addLocation'), document.getElementById('locationCarousel'))"><i class="fa fa-pencil fa-lg"></i></a>
            <a class="btn btn-danger btn-sm text-white" onclick="Delete('@Url.Action("Delete","Location", new { id=@item.LocID})', document.getElementById('viewLocation'))"><i class="fa fa-trash fa-lg"></i></a>
        </td>
    </tr>
}

</table>
