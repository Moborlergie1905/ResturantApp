@model IEnumerable<ResturantApp.BOL.MeasurementUnit>

@{
    ViewBag.Title = "ViewUnits";
    Layout = null;
}

<p>
    <a class="btn btn-primary btn-lg text-white" onclick="refreshAddNew('@Url.Action("Create","Measurement", new { id=0})', document.getElementById('addMeasurement'), document.getElementById('unitCarousel'), 1)"><i class="fa fa-plus fa-lg"></i></a>
</p>

<table class="table table-striped table-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UnitName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UnitName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notation)
        </td>
        <td>
            <a class="btn btn-success btn-sm text-white" onclick="Edit('@Url.Action("Create","Measurement", new { id=@item.UnitID})', document.getElementById('addMeasurement'), document.getElementById('unitCarousel'))"><i class="fa fa-pencil fa-lg"></i></a>
            <a class="btn btn-danger btn-sm text-white" onclick="Delete('@Url.Action("Delete","Measurement", new { id=@item.UnitID})', document.getElementById('viewMeasurement'))"><i class="fa fa-trash fa-lg"></i></a>
        </td>
    </tr>
}

</table>
